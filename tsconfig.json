{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "es6",
        "target": "es6",
        "lib": ["es6", "dom"],
        "jsx": "react-native",
        "outDir": "build",
        "rootDir": "app",
        "sourceMap": true,
        "allowJs": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "types",
        "typeRoots": ["node_modules/@types"],
        "skipLibCheck": true
    },
    "exclude": [
        "index.android.js",
        "index.ios.js",
        "build",
        "node_modules",
        "scripts",
        "__tests__"
    ],
    "compileOnSave": false
}
